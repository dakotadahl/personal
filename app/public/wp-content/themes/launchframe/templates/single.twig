{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper container-fluid">
		<article class="vp-lg-top-2 post-type-{{post.post_type}}" id="post-{{post.ID}}">
			{% if post.get_thumbnail %}
				<section class="featured-image col-lg-12" style="background-image:url({{post.thumbnail.src}})"></section>
			{% endif %}
			<section class="article-content col-lg-6 offset-lg-3 vp-lg-top-1 vp-lg-bottom-7">
				<h5 class="h5 vp-lg-top-2 vp-lg-bottom-2">{{ post.post_date|date('F j Y') }}</h5>
				<h1 class="article-h1 h3">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
		<section class="read-more col-lg-6 offset-lg-3 vp-lg-top-7">
			{% include "sidebar.twig" %}
		</section>
	</div><!-- /content-wrapper -->
{% endblock %}
