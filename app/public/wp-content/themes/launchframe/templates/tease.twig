<article class="col-lg-6 vp-lg-bottom-3 tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
		<h4 class="h4"><a href="{{post.link}}">{{post.title}}</a></h4>
		<p>{{post.get_preview}}</p>
		{% if post.get_thumbnail %}
			<img src="{{post.thumbnail.src}}" />
		{% endif %}
	{% endblock %}
	</a>
</article>
